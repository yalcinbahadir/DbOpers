@page "/"
<TelerikGrid Data="Employees" 
             AutoGenerateColumns="true" 
             Pageable="true"
             EditMode="GridEditMode.Popup"
             PageSize="8"            
             OnCreate="CreateEmployee" 
             OnUpdate="UpdateEmployee"             
             OnDelete="DeleteEmployee">
    <GridToolBar>
        <GridCommandButton Command="Add" Icon="add">Add</GridCommandButton>
    </GridToolBar>
    <GridColumns>
        <GridAutoGeneratedColumns />
        <GridCommandColumn Width="250px">
            <GridCommandButton Command="Edit" Icon="edit" Class="text-align-center">Edit</GridCommandButton>
            <GridCommandButton Command="Delete" Icon="delete">Delete</GridCommandButton>
        </GridCommandColumn>
    </GridColumns>
</TelerikGrid>

